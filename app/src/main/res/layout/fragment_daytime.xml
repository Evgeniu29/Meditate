<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img_13"
    tools:context=".daytime.DaytimeFragment">

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="461dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="164dp"
        android:background="@drawable/img_17">


        <TextView
            android:id="@+id/text2"
            android:layout_width="223dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="43dp"
            android:layout_marginBottom="59dp"
            android:text="@string/daytime"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="15dp">

        </TextView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="216dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/img_9">

    </ImageView>

    <ImageView
        android:id="@+id/daytimeimage"
        android:layout_width="wrap_content"
        android:layout_height="442dp"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="323dp"
        android:background="@drawable/img_15">

    </ImageView>

</RelativeLayout>