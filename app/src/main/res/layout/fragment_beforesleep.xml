<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img_13"
    tools:context=".beforesleep.BeforeSleepFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="216dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/img_9">

    </ImageView>

    <RelativeLayout
        android:layout_width="318dp"
        android:layout_height="359dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="229dp"
        android:background="@drawable/img_17">


        <TextView
            android:id="@+id/text1"
            android:layout_width="223dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="57dp"
            android:text="@string/before_sleep"
            android:textColor="@color/blue"
            android:textSize="20dp">

        </TextView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/daytime"
        android:layout_width="253dp"
        android:layout_height="282dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/img_16"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteY="255dp">

    </ImageView>

</RelativeLayout>